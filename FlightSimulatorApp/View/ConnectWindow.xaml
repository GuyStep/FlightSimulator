<Window x:Class="FlightSimulatorApp.View.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp.View"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="149.333" Width="215.334">
    <Grid Name="griddd">
        <TextBox Name="ipText" HorizontalAlignment="Left" Height="23" Margin="80,7,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="portText" HorizontalAlignment="Left" Height="23" Margin="80,35,0,0" TextWrapping="Wrap" Text="5402" VerticalAlignment="Top" Width="120"/>
        <Label Content="IP adress" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="25,35,0,0" VerticalAlignment="Top"/>
        <Button Name="conButton"  Click="conButton_Click" Content="Connect" HorizontalAlignment="Left" Margin="25,80,0,-0.333" VerticalAlignment="Top" Width="158" Height="35"/>
        <Label Content="{Binding Error, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="61,54,0,0" Height="26" Width="91"/>

    </Grid>
</Window>
